<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Mini Board | Home</title>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

  <!-- axios -->
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

  <!-- styles -->
  <link rel="stylesheet" href="styles/global.css">
  <link rel="stylesheet" href="styles/index.css">
</head>
<body>
  <!-- 제목 -->
  <h1 class="logo"><a href="/">Mini Board</a></h1>

  <!-- 테이블 -->
  <div class="box board-box shadow">
    <div class="board-table">
      <div class="search-box" style="margin-bottom: 12px;">
        <select id="searchType" class="form-select form-select-sm" style="width:132px; margin-right: 8px;">
          <option value="none" selected>Select one..</option>
          <option value="title">제목</option>
          <option value="content">내용</option>
          <option value="writer">작성자</option>
          <option value="createdAt">작성일</option>
        </select>
        <input style="width:400px" type="text" id="searchInput" class="form-control" placeholder="search posts...">
      </div>

      <table class="table table-hover">
        <thead class="table-light">
          <tr>
            <td style="width: 10%">번호</td>
            <td style="width: 60%">제목</td>
            <td style="width: 15%">작성자</td>
            <td style="width: 15%">작성일</td>
          </tr>
        </thead>
        <tbody>
          <% for(let i = 0; i < posts.length; i++) { %>
            <tr>
              <td><%= posts[i].id %></td>
              <td><%= posts[i].title %></td>
              <td><%= posts[i].writer %></td>
              <td>
                <%= String(posts[i].createdAt).slice(0, 4) %>-<%= String(posts[i].createdAt).slice(4, 6) %>-<%= String(posts[i].createdAt).slice(6, 8) %>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>

    <div class="board-menu">
      <!-- Pagination -->
      <nav aria-label="Page navigation example">
        <ul class="pagination">
          <li class="page-item">
            <a class="page-link" href="#" aria-label="Previous">
              <span aria-hidden="true">&laquo;</span>
            </a>
          </li>
          <% for(let page = 1; page <= pages; page++) { %>
            <li class="page-item"><a class="page-link" href="?page=<%= page %>"><%= page %></a></li>
          <% } %>
          <li class="page-item">
            <a class="page-link" href="#" aria-label="Next">
              <span aria-hidden="true">&raquo;</span>
            </a>
          </li>
        </ul>
      </nav>

      <!-- 게시글 작성 모달 trigger -->
      <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#postWriteModal">
        글 작성하기
      </button>
    </div>
  </div>

  <!-- 푸터 -->
  <footer>
    2022, created by Hyeongwang
  </footer>

  <!-- Modal -->
  <div class="modal fade" id="postWriteModal" tabindex="-1" aria-labelledby="postWriteModal" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">게시글 작성</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <input style="margin-bottom: 4px;" type="text" id="titleInput" class="form-control" placeholder="제목을 입력하세요.">
          <textarea style="min-height: 200px;" id="contentInput" class="form-control" aria-label="With textarea" placeholder="내용을 입력하세요."></textarea>
          <input style="margin-top: 4px;" type="text" id="writerInput" class="form-control" placeholder="이름을 입력하세요.">
          <input style="margin-top: 4px;" type="password" id="passwordInput" class="form-control" placeholder="비밀번호를 입력하세요.">
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">취소</button>
          <button type="button" class="btn btn-primary" id="writeBtn">작성하기</button>
        </div>
      </div>
    </div>
  </div>

  <!-- scripts -->
  <script src="scripts/app.js" type="module"></script>
</body>
</html>